@model List<OfferManagementSystem.Dto.CustomerDtos.ResultCustomerDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Müşteri işlemleri sayfası</h1>

<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Müşteri Adı</th>
		<th>Müşteri Soyadı</th>
		<th>Müşteri Maili</th>
		<th>Müşteri Telefon Numarası</th>
		<th>Müşteri Adresi </th>
		<th>Müşteri Oluşturulma Tarihi</th>
		<th>Müşteri Değiştirilme Tarihi</th>
		<th>Oluşturan Kullanıcı Id</th>
		<th>Sil</th>
		<th>Güncelle</th>
		<th>Detaylar</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<th>@item.Id</th>
			<td>@item.FirstName</td>
			<td>@item.LastName</td>
			<td>@item.Email</td>
			<td>@item.Phone</td>
			<td>@item.Address</td>
			<td>@item.CreatedTime</td>
			<td>@item.ModifiedTime</td>
			<td>@item.UserId</td>

			<td><a href="/Customer/RemoveCustomer/@item.Id" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
			<td><a href="/Customer/UpdateCustomer/@item.Id" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
			<td><a href="#" class="btn mb-1 btn-rounded btn-outline-dark">Detaylar</a></td>
		</tr>
	}
</table>
<a href="/Customer/AddCustomer/" class="btn mb-1 btn-rounded btn-outline-info">Yeni Müşteri Girişi</a>

